        }

        .fixed-button:hover {
            background-color: white;
            color: #de1b10;
        }

        @@keyframes realisticBounce {
            0% {
                transform: translateY(0);
            }

            10% {
                transform: translateY(-30px);
            }

            20% {
                transform: translateY(0);
            }

            30% {
                transform: translateY(-20px);
            }

            40% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }

            60% {
                transform: translateY(0);
            }

            70% {
                transform: translateY(-5px);
            }

            80% {
                transform: translateY(0);
            }

            100% {
                transform: translateY(0);
            }
        }
    </style>
